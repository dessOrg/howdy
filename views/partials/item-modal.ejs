<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title"><%= products[i].name %></h4>
  </div>
  <div class="modal-body">

<form class="form-horizontal" action="/updatepro/<%= products[i].id %>" method="post">

    <div class="row">
<div class="col-lg-5">
  <div class="well" style="width: 200px;height="190"; text-align: center;width:50%;margin: 0px auto;">
      <p><img src="<%= products[i].picture %>" width="160" height="160"src=""/></p>

  </div>
  <input type="file" name="image">
</div>
<div class="col-lg-7">
  <div class="control-group">

      <div class="controls">
          <input id="itemId" name="id" type="hidden" value="<%= products[i].id %>"
                 disabled/>
      </div>
  </div>

  <div class="control-group">
      <label for="name" class="control-label">Name:</label>

      <div class="controls">
          <input type="text" id="name" name="name" value="<%= products[i].name %>"/>
          <span class="help-inline"></span>
      </div>
  </div>

  <div class="control-group">
      <label for="category" class="control-label">Category:</label>

      <div class="controls">
          <input type="text" id="category" name="category" value="<%= products[i].category %>"/>
          <span class="help-inline"></span>
      </div>
  </div>

  <div class="control-group">
      <label for="sub" class="control-label">Sub-Category:</label>

      <div class="controls">
          <input type="text" id="sub" name="sub" value="<%= products[i].subCategory %>"/>
      </div>
  </div>

  <div class="control-group">
      <label for="price" class="control-label">Price:</label>

      <div class="controls">
          <input type="text" id="country" name="price" value="<%= products[i].price %>"/>
          <span class="help-inline"></span>
      </div>
  </div>

  <div class="control-group">
      <label for="price" class="control-label">Old Price:</label>

      <div class="controls">
          <input type="text" id="country" name="prevPrice" value="<%= products[i].prevPrice %>"/>
          <span class="help-inline"></span>
      </div>
  </div>

  <div class="control-group">
      <label for="description" class="control-label">Notes:</label>

      <div class="controls">
          <input type="text" id="description" name="description" value="<%= products[i].note %>" />
      </div>
  </div>


</div>
    </div>
    <div class="form-actions">
        <input class="btn btn-success" type="submit" value="Update"/>
        <input class="btn btn-warning" type="cancel" value="Cancel"/>
    </div>
</form>

  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
</div>
